{
    "name": "one",
    "version": "0.0.1",
    "description": "A simple module for devops demo yah!",
    "main": "one.js",
    "private": "true",
    "author": "Paolo Manca",
    "scripts": {
        "setup": "npm install",
        "setup:clean": "rm -fr ./node_modules",        
        "test": "tape test.js | faucet",
        "lint": "standard",
        "lint:count": "standard | standard-reporter | wc -l",
        "lint:report": "standard | standard-reporter --stylish",
        "sanity": "npm test && npm run lint",
        "precommit-msg": "echo '********* Pre-commit checks! Remember: Technical Debt is EVIL *********' && exit 0",
        "dist": "mkdir -p $npm_package_distdir && zip -r $npm_package_distdir/$npm_package_name-$npm_package_version.zip . -x 'node_modules/*' -x '.git/*' -x .gitignore -x 'dist/*'",
        "dist:clean": "rm -fr $npm_package_distdir",
        "profile": "node --prof",
        "postprofile": "node --prof-process isolate-0x*-v8.log > processed.log",
        "preprofile": "rm -f processed.txt && rm -f isolate-0x*-v8.log"
    },
    "distdir": "./dist",
    "keywords": [
        "template",
        "automation"
    ],
    "precommit": [
        "lint",
        "test"
    ],
    "license": "ISC",
    "dependencies": {
        "debug": "^4.1.0"
    },
    "devDependencies": {
        "faucet": "0.0.1",
        "tape": "^4.0.1",
        "tap-spec": "^5.0.0",
        "tape-catch": "^1.0.4",
        "pre-commit": "^1.0.10",
        "standard": "^12.0.1",
        "standard-reporter": "^1.0.5"
    }
}
